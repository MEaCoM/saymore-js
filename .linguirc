{

      "localeDir": "locale/",
      "srcPathDirs": ["app/"],
      "format": "lingui",
      "fallbackLocale": "en",
      "sourceLocale": "en-code",
      "srcPathIgnorePatterns": [
         "/node_modules/",
         "/dist/",
         ".*bundle.js"
      ],
      "extractBabelOptions": {
            "plugins": ["@babel/plugin-syntax-dynamic-import", "macros"],
              "presets": ["@babel/preset-react", "@lingui/babel-preset-react"]
      },
}
{
  "compilerOptions": {
    "skipLibCheck": true, //needed to get fork-ts-checker-webpack-plugin to work
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "target": "es2019",
    "lib": ["dom", "es6", "dom.iterable", "scripthost", "es2017"],
    "types": ["jest"],

    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "useDefineForClassFields": true, // for mobx 6 (worked without it, but this is what the migration guide from mobx 5 to 6 says to do)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin", // adds intellisense for css / emotion
        "lint": {
          "validProperties": ["label"]
        }
      }
    ]
  },
  "files": ["app/index.tsx"],
  "include": ["app/**/*.ts", "app/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
